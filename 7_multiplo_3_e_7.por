programa
{
	funcao inicio()
	{

		inteiro numero

		escreva("Informe um número inteiro: ")
		leia(numero)

		se (numero % 3 == 0){
			escreva("O número " + numero + " é múltiplo de 3!" + "\n")
		} senao {
			escreva("O número " + numero + " não é múltiplo de 3!" + "\n")
		}
		se (numero % 7 == 0) {
			escreva("O número "+ numero + " é múltiplo de 7!" + "\n")
		} senao {
			escreva("O número "+ numero + " não é múltiplo de 7!" + "\n")
		}
		
	}
}
